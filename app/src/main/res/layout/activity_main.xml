<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/url_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Adres URL:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/url_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="WprowadÅº adres URL pliku"
        android:inputType="textUri"
        android:text="https://www.example.com/file.txt" />

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/url_input"
        android:layout_marginTop="16dp"
        android:text="Pobierz informacje"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fetch_button"
        android:layout_marginTop="24dp"
        android:text="Rozmiar pliku:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/size_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size_label"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size_output"
        android:layout_marginTop="24dp"
        android:text="Typ pliku:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/type_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_label"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_output"
        android:layout_marginTop="16dp"
        android:text="Pobierz plik"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/bytes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_button"
        android:layout_marginTop="24dp"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/bytes_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bytes_label"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
